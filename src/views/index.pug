doctype html
head
  meta(charset='utf-8')
  link(rel='stylesheet' href='styles.css')
  title Consultas SQL
body
  center
    label.titulo Escriba su consulta aqui
  form(action='/' method='post')
    textarea(autofocus='' name='query' rows='4' cols='40' placeholder='Select  from ')
    center
      button(type='submit' name='button' onclick='boton()') Consulta
  script(src='app.js')
  center
    h1 Resultados
  center
    if (results)
      table.table
        thead
          each col in fields
            th=col.name
        tbody
          each row in results
            tr
              each col in fields
                td=row[col.name]
